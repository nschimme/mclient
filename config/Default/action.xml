<?xml version="1.0" encoding="UTF-8"?>
<actions size="3" version="1.0">
   <array1 label="reply" pattern="^\033\[\d+m(.+) tells you '.+'" tags="XMLTell">
       <command>
       #print $0
       #alias tt=tell $2 \$0
       </command>
   </array1>
   <array2 label="score_hp" pattern="^(\d+)/(\d+) hits and (\d+)/(\d+) moves.">
      <command>
      #print $0
      #alias rep=emote reports $0
      </command>
   </array2>
   <array3 label="score_mana" pattern="^(\d+)/(\d+) hits, (\d+)/(\d+) mana, and (\d+)/(\d+) moves.">
      <command>
      #print $0
      #alias rep=emote reports $0
      </command>
   </array3>
</actions>
